/*
 Write a Cpp program that prompts the user to input the elapsed time for an event in seconds. The program then outputs the elapsed time in hours, minutes, and seconds. (For example, if the elapsed time is 9,630 seconds, then the output is 2:40:30.)
 */

#include <iostream>

using namespace std;

const int secondsPerMinute = 60;
const int secondsPerHour = 60 * secondsPerMinute;
int main()
{
    int secs, mins, hours, secElapsed;
    
    cout << "Enter the number of seconds elapsed: " << endl;
    cin >> secElapsed;
    
    hours = secElapsed / secondsPerHour;
    secElapsed = secElapsed % secondsPerHour;
    mins = secElapsed / secondsPerMinute;
    secs = secElapsed % secondsPerMinute;
    
    cout << hours << ":" << mins << ":" << secs << endl;
    
    return 0;
}

